    <li class="sixth"><%= link_to show_question.answer_6, "#", "data-video-id"=> show_question.video6 if show_question.answer_6.present?  %></li>
    <li class="seventh"><%= link_to show_question.answer_7, "#", "data-video-id"=> show_question.video7 if show_question.answer_7.present?  %></li>
    <li class="eight"><%= link_to show_question.answer_8, "#", "data-video-id"=> show_question.video8 if show_question.answer_8.present?  %></li>
  </ul>
</div>
