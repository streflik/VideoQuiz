<%= simple_form_for(@quiz) do |f| %>

    <%= f.error_notification %>

    <div class="inputs">
      <div class="first"><%= f.input :name %></div>
      <%= f.association :user, :label_method => :name, :value_method => :id,
                        :collection => @customers, :prompt => false %>
      <%= f.input :yt_id %>
      <%= f.input :reward %>
      <%= f.input :reward_short %>
      <%= f.input :reward_exp %>
      <%= f.input :instruction %>
      <%= f.input :fb_page %>
      <%= f.input :landing_page %>
      <%= f.input :custom_css %>
   
      <%= f.simple_fields_for :questions, @question do |q| %>
          <%= q.input :text %>
          <%= q.input :answer_1 %>
          <%= q.input :answer_2 %>
          <%= q.input :answer_3 %>
          <div class="last"><%= q.input :correct %></div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.button :submit %>
    </div>

<% end %>
