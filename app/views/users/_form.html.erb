<%= simple_form_for @user do |f| %>
    <%= f.error_notification%>
  <div class="first"> <%= f.input :first_name, :autofocus => true %></div>
  <%= f.input :last_name %>
  <%= f.input :email %>
    <%= f.input :role, :as=>:select, :collection=>["ADMIN", "USER"] if can?(:manage,@user)%>

  <%= f.button :submit, "Dodaj", :class=>"primary" %>
  <% end %>