<% title "Rejestracja" %>

<%= render :partial => "users/shared/nav" %>

<!-- The content -->
<section id="content">

  <br /><br />

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <div class="first"> <%= f.input :first_name, :autofocus => true %></div>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <div class="last"><%= f.input :password_confirmation %></div>
    <%= f.button :submit, "Zarejestruj", :class=>"primary" %>
<% end %>

</section>
